---
// @ts-ignore
import { getImage } fro@astrojs/image.js';
import { warnForMissingAlt } fro@astrojs/image/components/index.js.js';
import type { ImageComponentLocalImageProps, ImageComponentRemoteImageProps } fro@astrojs/image/components/index.js.js';

export type Props = ImageComponentLocalImageProps | ImageComponentRemoteImageProps;

const { loading = 'lazy', decoding = 'async', ...props } = Astro.props;

if (props.alt === undefined || props.alt === null) {
	warnForMissingAlt();
}

const attrs = await getImage(props);
---

<img {...attrs} {loading} {decoding} />
